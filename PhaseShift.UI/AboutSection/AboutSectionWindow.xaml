<Window x:Class="PhaseShift.UI.AboutSection.AboutSectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhaseShift.UI.AboutSection"
        xmlns:common="clr-namespace:PhaseShift.UI.Common"
        xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Icon="../app_icon.ico"
        MinHeight="600"
        Height="600"
        MinWidth="450"
        Width="450"
        SizeToContent="WidthAndHeight"
        Style="{StaticResource MaterialDesignWindow}">

    <Window.DataContext>
        <local:AboutSectionVm />
    </Window.DataContext>

    <Window.Resources>
        <Style x:Key="ContactButton" 
               TargetType="{x:Type Button}"
               BasedOn="{StaticResource MaterialDesignFlatButton}">
            
            <Setter Property="Margin"
                    Value="2 0" />

            <Setter Property="Padding"
                    Value="3 0" />

            <Setter Property="Height"
                    Value="20" />

            <Setter Property="FontSize"
                    Value="16" />
        </Style>

        <Style TargetType="TextBlock"
               BasedOn="{StaticResource MaterialDesignBody1TextBlock}">
            
            <Setter Property="FontSize"
                    Value="16" />
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Grid Grid.Row="0" 
              Margin="0 0 0 10">
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Image Source="../app_icon.ico"
                   Width="100"
                   Height="100"
                   Grid.Column="0"
                   Margin="15" />

            <StackPanel Grid.Column="1" 
                        VerticalAlignment="Center">
                
                <TextBlock Text="{Binding AppName}" 
                           FontSize="36" 
                           Margin="0 0 0 5" />
                
                <TextBlock Text="{Binding AppVersion}" 
                           FontSize="24" />
            </StackPanel>
        </Grid>

        <!-- Description Section -->
        <TextBlock Grid.Row="1"
                   Text="{Binding AppDescription}"
                   TextWrapping="Wrap"
                   Margin="0 10 0 10" />

        <!--Link section for author contact information-->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0 10 0 10">

            <TextBlock Text="Let's connect!"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       Margin="0 0 10 0" />

            <Button Style="{StaticResource ContactButton}"
                    Command="{Binding OpenAuthorEmailCommand}"
                    ToolTip="Email">

                <Viewbox>
                    <materialDesign:PackIcon Kind="Email" />
                </Viewbox>
            </Button>

            <Button Style="{StaticResource ContactButton}"
                    Command="{Binding OpenAuthorGitHubCommand}"
                    ToolTip="GitHub">

                <Viewbox>
                    <materialDesign:PackIcon Kind="Github" />
                </Viewbox>
            </Button>

            <Button Style="{StaticResource ContactButton}"
                    Command="{Binding OpenAuthorLinkedInProfileCommand}"
                    ToolTip="LinkedIn">

                <Viewbox>
                    <materialDesign:PackIcon Kind="Linkedin" />
                </Viewbox>
            </Button>
        </StackPanel>

        <!-- Author and License Section -->
        <Grid Grid.Row="3"
              Margin="0 10 0 10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="5" /> <!--spacer row-->
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Author -->
            <TextBlock Grid.Row="0"
                       Grid.Column="0"
                       Text="Author:"
                       Margin="0 0 10 0" />

            <TextBlock Grid.Row="0"
                       Grid.Column="1"
                       Text="{Binding Author}"
                       FontWeight="Bold" />            

            <!-- License -->
            <TextBlock Grid.Row="2"
                       Grid.Column="0"
                       Text="License:"
                       Margin="0 0 10 0" />
            
            <TextBlock Grid.Row="2"
                       Grid.Column="1"
                       Text="{Binding License}"
                       TextWrapping="Wrap" />            
        </Grid>

        <!-- Acknowledgements Section -->
        <GroupBox Grid.Row="4" 
                  Header="This app uses the following 3rd party libraries" 
                  Margin="0 10 0 0">
            
            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                          HorizontalScrollBarVisibility="Disabled">
                
                <TextBlock Text="{Binding Acknowledgements}" 
                           TextWrapping="Wrap"
                           FontSize="12"
                           LineHeight="20"/>
            </ScrollViewer>
        </GroupBox>
    </Grid>
</Window>
