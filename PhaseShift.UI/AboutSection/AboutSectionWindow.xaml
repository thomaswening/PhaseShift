<Window x:Class="PhaseShift.UI.AboutSection.AboutSectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhaseShift.UI.AboutSection"
        xmlns:common="clr-namespace:PhaseShift.UI.Common"
        xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Icon="../app_icon.ico"
        MinHeight="600"
        Height="600"
        MinWidth="600"
        Width="600"
        SizeToContent="WidthAndHeight"
        Style="{StaticResource MaterialDesignWindow}">

    <Window.DataContext>
        <local:AboutSectionVm />
    </Window.DataContext>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Grid Grid.Row="0" 
              Margin="0 0 0 10">
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Image Source="/AboutSection/app_icon.ico"
                   Width="100"
                   Height="100"
                   Grid.Column="0"
                   Margin="15" />

            <StackPanel Grid.Column="1" 
                        VerticalAlignment="Center">
                
                <TextBlock Text="{Binding AppName}" 
                           FontSize="36" 
                           Margin="0 0 0 5" />
                
                <TextBlock Text="{Binding AppVersion}" 
                           FontSize="24" />
            </StackPanel>
        </Grid>

        <!-- Description Section -->
        <TextBlock Grid.Row="1"
                   Text="{Binding AppDescription}"
                   TextWrapping="Wrap"
                   FontSize="14"
                   Margin="0 10 0 10" />

        <!-- Author and License Section -->
        <Grid Grid.Row="2" 
              Margin="0 10 0 10">
            
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Author -->
            <TextBlock Grid.Row="0" 
                       Grid.Column="0" 
                       Text="Author:" 
                       FontWeight="Bold" 
                       Margin="0 0 10 0" />
            
            <StackPanel Grid.Row="0" 
                        Grid.Column="1" 
                        Orientation="Horizontal">
                
                <TextBlock Text="{Binding Author}" 
                           FontWeight="Bold" 
                           Margin="0 0 5 0" />
                
                <TextBlock Text="(" />
                
                <TextBlock>
                    <Hyperlink NavigateUri="{Binding AuthorEmailUri}" RequestNavigate="Hyperlink_RequestNavigate">
                        <Run Text="Email" />
                    </Hyperlink>
                </TextBlock>
                
                <TextBlock Text=" | " />
                
                <TextBlock>
                    <Hyperlink NavigateUri="{Binding AuthorWebsite}" RequestNavigate="Hyperlink_RequestNavigate">
                        <Run Text="GitHub" />
                    </Hyperlink>
                </TextBlock>
                
                <TextBlock Text=" | " />
                
                <TextBlock>
                    <Hyperlink NavigateUri="{Binding AuthorLinkedIn}" RequestNavigate="Hyperlink_RequestNavigate">
                        <Run Text="LinkedIn" />
                    </Hyperlink>
                </TextBlock>
                
                <TextBlock Text=")" />
            </StackPanel>

            <!-- License -->
            <TextBlock Grid.Row="1" 
                       Grid.Column="0" 
                       Text="License:" 
                       FontWeight="Bold" 
                       Margin="0 0 10 0" />
            
            <TextBlock Grid.Row="1" 
                       Grid.Column="1" 
                       Text="{Binding License}" 
                       TextWrapping="Wrap" />
        </Grid>

        <!-- Acknowledgements Section -->
        <GroupBox Grid.Row="3" 
                  Header="This app uses the following 3rd party libraries" 
                  Margin="0 10 0 0">
            
            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                          HorizontalScrollBarVisibility="Disabled">
                
                <TextBlock Text="{Binding Acknowledgements}" 
                           TextWrapping="Wrap" />
            </ScrollViewer>
        </GroupBox>
    </Grid>
</Window>
